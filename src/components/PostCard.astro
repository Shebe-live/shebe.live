---
import { Image } from 'astro:assets'

const {
	data: { title, heroImage, category },
	slug
} = Astro.props
---

<article>
	<div class='img'>
		<a href={`/post/${slug}/`}>
			<>
				{
					heroImage && (
						<Image src={heroImage} width={505} height={505} format='webp' class='img' alt={title} />
					)
				}
			</>
		</a>

		<span class='category'>{category}</span>
	</div>

	<a class='title' href={`/post/${slug}/`}>
		{title}
	</a>
</article>

<style>
	article {
		display: flex;
		flex-direction: column;
		gap: 14px;
	}

	article:first-child {
		grid-area: 1 / 1 / 3 / 3;
	}
	article:nth-child(2) {
		grid-area: 1 / 3 / 2 / 4;
	}
	article:nth-child(3) {
		grid-area: 1 / 4 / 2 / 5;
	}
	article:nth-child(4) {
		grid-area: 3 / 1 / 4 / 2;
	}
	article:nth-child(5) {
		grid-area: 3 / 2 / 4 / 3;
	}
	article:nth-child(6) {
		grid-area: 2 / 3 / 4 / 5;
	}

	.title {
		font-size: 12px;
	}

	.img {
		position: relative;
	}

	.img img {
		aspect-ratio: 1;
		object-fit: cover;
		object-position: center;

		display: block;
		width: 100%;
		height: auto;
	}

	.category {
		position: absolute;
		left: 0;
		top: 0;

		padding: 8px 14px;
		min-width: 118px;

		background: #fff;
		font-size: 14px;
		text-transform: uppercase;
		text-align: center;
	}
</style>
